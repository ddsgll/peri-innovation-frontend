.main-residents
    height 100%
    background #fff

    &__slider
        margin 2rem 0 0 0

    &__slider-item
        width 100%
        transition opacity .1s ease, transform .1s ease
        transform perspective(1000px) rotateY(-45deg) scale(.7,.7)
        opacity 0

        +xs()
            transform none
            transition none
        +md()
            transition opacity .1s ease, transform .1s ease
            transform perspective(1000px) rotateY(-45deg) scale(.7,.7)

        &.is-selected
            transform perspective(1000px) rotateY(0deg) scale(1,1)
            opacity 1
            transition opacity .6s ease, transform 1s ease

            +xs()
                transform none
                transition none
            +md()
                transition opacity .1s ease, transform .1s ease
                transform perspective(1000px) rotateY(-45deg) scale(.7,.7)

        .button
            margin 56px 0

            +xs()
                font-size .8rem
                margin 1rem

    &__slider-photo
        width 560px
        height 400px
        object-fit cover
        line-height 1
        font-size 0px
        margin 0 auto
        background-size cover !important

        +md()
            width 480px
            height 320px

        +xs()
            width 100%
            height 250px

        img
            display inline-block
            max-width 100%
            max-height 100%


    &__arrow
        position absolute
        top 50%
        margin-top -36px
        z-index 1000

        +xs()
            background rgba(#fff,80%)
            padding 1rem

        &.left
            left -36px

            +md()
                left 0

            +sm()
                left 0

            +xs()
                left 1rem

        &.right
            right -36px

            +md()
                right 0

            +sm()
                right 0

            +xs()
                right 1rem



    .flickity-page-dots
        bottom 0px

        +xs()
            bottom -32px

        li.dot
            width 10px
            height 10px
            background #636363
            opacity 1
            transition all 1s ease
            transform perspective(1000) rotateX(0deg)
            border 1px solid transparent
            margin 0 4px

            +xs()
                width 16px
                height 16px

            &.is-selected
                background #fff
                transition all .4s ease
                transform perspective(1000) rotateX(180deg)
                border 1px solid #222
