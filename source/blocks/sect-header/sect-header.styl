.sect-header
	display block
	width 100%
	height 30vh
	background #000
	text-align center
	overflow hidden
	background-size cover !important
	background-attachement fixed !important
	
	img
		width 100%
		
	&__inf
		width 100%
		position absolute
		bottom .5rem
		text-align center
	
		h1
			display block
			text-align center
			font-size 3rem
			color #fff
			font-weight 100
			margin 0
			margin-bottom 1rem
			
			+xs()
				font-size 1.6rem
			
		span
			font-size 1rem
			font-weight 400
			padding 1rem 0
			text-align center
			color #fff