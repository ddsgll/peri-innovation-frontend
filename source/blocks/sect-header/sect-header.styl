.sect-header
    display block
    width 100%
    height 30vh
    background #000
    text-align center
    overflow hidden
    background-size cover !important
    background-attachement fixed !important

    img
        width 100%

    &__inf
        width 100%
        position absolute
        bottom .5rem
        text-align center

        h1
            display block
            text-align center
            font-size 3rem
            color #fff
            font-weight 100
            margin 0
            margin-bottom 2rem

            +xs()
                font-size 1.4rem
                margin-bottom .6rem

        span
            display block
            font-size 1rem
            font-weight 400
            padding-bottom 1rem
            text-align center
            color #fff

            +xs()
                font-size .8rem
                padding-bottom .4rem
