.slide-arrow
    display block
    width 36px
    height 72px
    cursor pointer

    span
        display block
        position absolute
        width 51px
        height 1px
        background #222
        top 36px
        transition all .5s cubic-bezier(.3,1.6,.3,1)

    &.right
        span
            right 0
            transform-origin 100% 50%
            transform rotate(-45deg)

        :last-child
            transform rotate(45deg)


        &:hover
            span
                background periRed
                right -10px
                transform rotate(-35deg)

            :last-child
                transform rotate(35deg)


    &.left
        span
            left 0
            transform-origin 0% 50%
            transform rotate(45deg)

        :last-child
            left 00
            transform rotate(-45deg)


        &:hover
            span
                background periRed
                left -10px
                transform rotate(35deg)

            :last-child
                transform rotate(-35deg)
