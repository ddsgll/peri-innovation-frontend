.event-preview
	width 100%
	background #666
	margin 4rem 0 3rem 0
	height 200px
	overflow hidden
	background-size cover !important
	
	img
		max-width 100%
		
	&__info
		background #000
		position absolute
		width 100%
		max-height 100%
		min-height 25%
		padding 1rem
		bottom 0
		left 0
		color #fff
		transition all .4s ease
		
		span
			display block
			font-size 1rem
			font-weight 100
			
			&.inf
				transition height .4s ease
				overflow hidden
				height 0
				font-size 1rem
		
	&__button
		display block
		width 100%
		position absolute
		bottom 1rem
		left 0rem
		padding 0 1rem
		opacity 0
		overflow hidden
		height 0px
		transition all .4s ease
		
		.button
			box-sizing content-box
			margin 0
			
			span
				font-weight 400
			

	&:hover &__info
		bottom 0
		min-height 100%
		background rgba(0,0,0,.7)
		
		span
			font-weight 100
			
			&.inf
				height 2rem
				font-weight 100
				
	&:hover &__button
		height 3.3rem
		bottom 1rem
		opacity 1
	
		span
			font-weight 400