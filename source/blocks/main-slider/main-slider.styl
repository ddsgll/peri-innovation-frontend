.main-slider
	position absolute
	width 100%
	height 100%
	top 0
	left 0
	overflow hidden

	&__item
		width 100%
		height 100%
		background rgba(0,0,0,.2)
		overflow hidden

	&__item-image
		width 100%
		height 100%
		position absolute
		top 0
		left 0
		object-fit cover
		transition transform 1s ease
		transform scale(1,1)
		transform-origin 50% 50%
		background-size cover !important

		+xs()
			transition none

		&::after
			content ''
			position absolute
			top 0
			left -5%
			display inline-block
			width 110%
			height 100%
			background rgba(0,0,0,.6)


	&__item-description
		font-family mainFont
		position absolute
		width 100%
		height 100%
		top 0
		left 0
		color #fff
		display flex
		flex-direction column
		align-items center
		justify-content center
		z-index 500

		+xs()
			padding-bottom 6rem

		span
			font-size 1rem
			font-weight 400

			+xs()
				font-weight 700
				font-size .8rem

		.title
			font-size 3rem
			margin 1rem 0 2rem 0
			font-weight 100
			line-height 1.2
			text-align center
			padding 0 1rem

			+xs()
				font-size 1.6rem
				line-height 1
				text-align center
				font-weight 100
				padding 0 .5rem


	&__item-buttons
		width 100%
		flex none
		position absolute
		bottom 4rem

		+xs()
			bottom 2rem
			
		+md()
			bottom 3rem
			
		+lg()
			bottom 4rem


.main-slider__item.is-selected
	.main-slider__item-image
		transform scale(1.1,1.1)
		transition transform 2s ease

		+xs()
			transition none
			transform scale(1,1)


.flickity-page-dots
	bottom 20px

	+xs()
		bottom 6px

	li.dot
		width 16px
		height 16px
		background #636363
		opacity 1
		transition all 1s ease
		transform perspective(1000) rotateX(0deg) scale(0.7,0.7)

		+xs()
			width 24px
			height 24px

		&.is-selected
			background #fff
			transition all .4s ease
			transform perspective(1000) rotateX(180deg) scale(1,1)
