.main-slider
	position absolute
	width 100%
	height 100%
	top 0
	left 0
	overflow hidden
	
	&__item
		width 100%
		height 100%
		background rgba(0,0,0,.2)
		overflow hidden
		
	&__item-image
		width 100%
		height 100%
		position absolute
		top 0
		left 0
		object-fit cover
		transition transform 1s ease
		transform scale(1,1)
		transform-origin 50% 50%
		background-size cover !important
		
		&::after
			content ''
			position absolute
			top 0
			left -5%
			display inline-block
			width 110%
			height 100%
			background rgba(0,0,0,.6)

			
	&__item-description
		font-family mainFont
		position absolute
		width 100%
		height 100%
		top 0
		left 0
		color #fff
		display flex
		flex-direction column
		align-items center
		justify-content center
		z-index 500
		
		span
			font-size 1rem
			font-weight 400
		
		.title
			font-size 3rem
			margin 1rem 0 2rem 0
			font-weight 100
			

	&__item-buttons
		width 100%
		flex none
		position absolute
		bottom 64px
			

.main-slider__item.is-selected
	.main-slider__item-image
		transform scale(1.1,1.1)
		transition transform 2s ease


.flickity-page-dots
	bottom 20px
	
	li.dot
		width 16px
		height 16px
		background #636363
		opacity 1
		transition all 1s ease
		transform perspective(1000) rotateX(0deg) scale(0.7,0.7)
		
		&.is-selected
			background #fff
			transition all .4s ease
			transform perspective(1000) rotateX(180deg) scale(1,1)