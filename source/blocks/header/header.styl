.header
	position fixed
	top 0
	left 0
	width 100%
	z-index 1000

.header__content
	background transparent
	padding 1.4rem 0
	display flex
	align-items center
	justify-content space-between

	+xs()
		align-items flex-start
		padding .5rem

	&__logo
		display inline-block
		vertical-align middle

		+xs()
			display block

		img
			display inline-block
			max-width 100%

			+xs()
				max-width 64px
