nav
    display inline-block
    vertical-align middle

.menu
    display inline-block
    vertical-align middle
    z-index 1000

    +xs()
        display block
        text-align left
        width 100%
        padding-left 1rem

    li
        display inline-block
        margin-right 2rem

        +xs()
            margin-right 1rem
            margin-bottom .5rem

        +below(330px)
            margin-bottom .2rem

        &:last-child
            margin-right 0

    &__link
        font-size 1rem
        color #fff
        font-weight 300
        cursor pointer

        +xs()
            font-size 1rem
            font-weight 500

        +below(330px)
            font-size .75rem
            font-weight 100

        &:not(&--active)::after
            content ''
            display inline-block
            position absolute
            width 0%
            height 2px
            background #fff
            bottom -8px
            left 0
            animation underlineOut .2s
            animation-timing-function cubic-bezier(.8,.2,.2,.8)

        &:not(&--active):hover::after
            animation underlineIn .2s
            width 100%

        &--active::after
            content ''
            display inline-block
            position absolute
            width 100%
            height 2px
            background #fff
            bottom -8px
            left 0
