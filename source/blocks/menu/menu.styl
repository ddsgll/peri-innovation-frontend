nav
	display inline-block
	vertical-align middle

.menu
	display inline-block
	vertical-align middle
	z-index 1000
	
	li
		display inline-block
		margin-right 2rem
		
		&:last-child
			margin-right 0
	
	&__link
		font-size 1rem
		color #fff
		font-weight 300
		cursor pointer
		
		&:not(&--active)::after
			content ''
			display inline-block
			position absolute
			width 0%
			height 2px
			background #fff
			bottom -8px
			left 0
			animation underlineOut .2s
			animation-timing-function cubic-bezier(.8,.2,.2,.8)
			
		&:not(&--active):hover::after
			animation underlineIn .2s
			width 100%
			
		&--active::after
			content ''
			display inline-block
			position absolute
			width 100%
			height 2px
			background #fff
			bottom -8px
			left 0
			