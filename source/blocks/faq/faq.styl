.faq
	display block
	opacity .8
	transition all .4s ease
	padding 1rem
	margin 0 6rem 1rem 6rem
	cursor pointer
	
	+xs()
		margin 0 0 1rem 0

	&:hover
		opacity 1
	

	&::before,
	&::after
		box-sizing border-box
		content ''
		position absolute
		display block
		border 8px solid transparent
		z-index 500
		transition border .2s ease
		
	&::before
		top 0
		left 50%
		width 0
		height 100%
		
		border-right none
		border-left none
		
	&::after
		top 50%
		left 0
		width 100%
		height 0
		
		border-top none
		border-bottom none
		

	&.active
		opacity 1
		
		&::before
			border 8px solid #2c1376
			border-right none
			border-left none
			width 100%
			left 0
			transition all .4s cubic-bezier(.8,.2,.2,.8)
		
		&::after
			border 8px solid #2c1376
			border-top none
			border-bottom none
			height 100%
			top 0
			transition all .4s cubic-bezier(.8,.2,.2,.8)			
			

	
.faq__question
	font 1rem 'Roboto'
	line-height 1.5
	color #000
	font-weight bold
	cursor pointer
	
	&::before
		content '?'
		display inline-block
		margin-right 2rem
		width 2rem
		height 2rem
		background #000
		border-radius 1rem
		text-align center
		line-height 2.2rem
		color #fff
		font-weight bold
		font-size 1.2rem
		vertical-align top
		
	span
		display inline-block
		width 90%
		vertical-align top
		
		+xs()
			width 80%
		
	
.faq__answer
	font 1rem 'Roboto'
	line-height 1.5
	color #000
	// transition all .2s ease
	height 0
	opacity 0
	padding-left 4rem

.faq.active .faq__question
	margin-bottom 1rem

.faq.active .faq__answer
	opacity 1
	height auto


.faq__container:hover .faq
	opacity .3
	
	&:hover
	&.active
		opacity 1