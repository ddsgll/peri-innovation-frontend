.faq
	display block
	opacity .8
	transition all .4s ease
	padding 1rem
	margin 0 6rem 1rem 6rem
	cursor pointer
	
	+xs()
		margin 0 0 1rem 0

	&:hover
		opacity 1
		
	&::before 
		content ''
		position absolute
		display inline-block
		width 0%
		height 100%
		top 0
		left 50%
		border 2px solid transparent
		border-left none
		border-right none
		opacity 0
		transition all .4s cubic-bezier(.8,.2,.2,.8);

	&.active::before
		border-color periRed
		opacity 1
		width 100%
		left 0
			

	
.faq__question
	font 1rem 'Roboto'
	line-height 1.5
	color #000
	font-weight bold
	cursor pointer
	
	&::before
		content '?'
		display inline-block
		margin-right 2rem
		width 2rem
		height 2rem
		background #000
		border-radius 1rem
		text-align center
		line-height 2.2rem
		color #fff
		font-weight bold
		font-size 1.2rem
		vertical-align top
		
	span
		display inline-block
		width 90%
		vertical-align top
		
		+xs()
			width 75%
		
	
.faq__answer
	font 1rem 'Roboto'
	line-height 1.5
	color #000
	// transition all .2s ease
	height 0
	opacity 0
	padding-left 4rem

.faq.active .faq__question
	margin-bottom 1rem

.faq.active .faq__answer
	opacity 1
	height auto


.faq__container:hover .faq
	opacity .3
	
	&:hover
	&.active
		opacity 1