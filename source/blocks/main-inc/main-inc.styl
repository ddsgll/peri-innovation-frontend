.main-inc
	width 100vw
	height 100vh
	background transparent url('../img/incubator-bg.jpg') no-repeat center
	background-size cover
	display flex
	align-items center
	justify-content center
	
	.title
		display block
		text-align center
		color #fff
		font-weight 100
		font-size 48px
		
	&__item
		text-align center
		display inline-block
		vertical-align top
		margin 5rem 0 6rem 0
		
		span
			display block
			color #fff
			line-height 1.5
			
		:first-child
			font-size 2rem
			font-weight 400
			
		:last-child
			font-size 1rem
			padding 0 3rem
			font-weight 100
			
	&__buttons
		position absolute
		left 0
		width 100%
		bottom 4rem