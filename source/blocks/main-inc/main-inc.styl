.main-inc
    width 100vw
    height 100vh
    background transparent url('../img/incubator-bg.jpg') no-repeat center
    background-size cover
    display flex
    align-items center
    justify-content center

    +xs()
        display block
        padding-top 4rem
        height auto
        

    .title
        display block
        text-align center
        color #fff
        font-weight 100
        font-size 48px

        +xs()
            font-size 2rem
            font-weight 500
            text-align center
            padding 0 1rem

    &__item
        text-align center
        display block
        vertical-align top
        margin 5rem auto 6rem auto

        +xs()
            margin .5rem auto

        span
            display block
            color #fff
            line-height 1.5

        :first-child
            font-size 1.4rem
            font-weight 400

        :last-child
            font-size .8rem
            padding 0 1rem
            font-weight 100

            +xs()
                padding 0 .2rem

    &__buttons
        position absolute
        left 0
        width 100%
        bottom 4rem

        +xs()
            position relative
            bottom 0
