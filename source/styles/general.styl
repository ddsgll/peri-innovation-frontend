body
html
    width 100vw
    height auto
    min-height 100vh
    padding 0
    margin 0
    overflow visible !important

body
    font-size 16px
    font-family mainFont, arial, 'sans-serif'
    color textColor
    line-height 1.4rem
    transform translate3d(0, 0, 0)
    overflow-x hidden
    background #fff

*
    box-sizing border-box
    position relative

    &:focus
    &:active
        outline none



a
a:hover
a:visited
a:active
    text-decoration none



ul, ol
    list-style-position inside
    margin 0
    padding 0

.onepage-pagination
    display none !important
