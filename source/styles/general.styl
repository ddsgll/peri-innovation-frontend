body
html
	width 100%
	padding 0
	margin 0
	
body
	font-size 14px
	font-family mainFont, arial, 'sans-serif'
	color textColor
	line-height 1.4
	
*
	box-sizing border-box
	position relative
	
	&:focus
	&:active
		outline none
		

	
a
a:hover
a:visited
a:active
	text-decoration none
	color linkColor
	border-bottom 1px solid transparent
	transition border .3s ease
	
a:hover
	border-bottom 1px solid #000
	
	&:active
		color #000
	
a:visited
	color lighten(linkColor, 10%)
	
	&:hover
		border-bottom 1px solid lighten(linkColor, 16%)
	


ul, ol 
	list-style-position inside
	margin 0
	padding 0